{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tasks": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "heracles:entity_interaction",
              "heracles:biome",
              "heracles:item_interaction",
              "heracles:block_interaction",
              "heracles:kill_entity",
              "heracles:stat",
              "heracles:recipe",
              "heracles:check",
              "heracles:item",
              "heracles:advancement",
              "heracles:changed_dimension",
              "heracles:structure",
              "heracles:xp",
              "heracles:dummy"
            ]
          },
          "collectionType": {
            "type": "string",
            "enum": ["MANUAL", "AUTOMATIC", "CONSUME"]
          },
          "icon": {
            "type": "object",
            "properties": {
              "item": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "count": {
                    "type": "number"
                  },
                  "nbt": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "number"
                    }
                  }
                },
                "required": ["id", "count"]
              },
              "type": {
                "type": "string"
              }
            },
            "required": ["item", "type"]
          },
          "entity": {
            "type": "string"
          },
          "biomes": {
            "type": "string"
          },
          "item": {
            "type": "string"
          },
          "block": {
            "type": "string"
          },
          "state": {
            "type": "object"
          },
          "amount": {
            "type": "number"
          },
          "stat": {
            "type": "string"
          },
          "target": {
            "type": "number"
          },
          "recipes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "advancements": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          },
          "structures": {
            "type": "string"
          },
          "xpType": {
            "type": "string",
            "enum": ["POINTS", "LEVEL"]
          },
          "value": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["type", "title", "icon"]
      }
    },
    "rewards": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "heracles:xp",
              "heracles:command",
              "heracles:item",
              "heracles:loottable"
            ]
          },
          "xptype": {
            "type": "string",
            "enum": ["POINTS", "LEVEL"]
          },
          "amount": {
            "type": "number"
          },
          "command": {
            "type": "string"
          },
          "item": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "count": {
                "type": "number"
              },
              "nbt": {
                "type": "object",
                "additionalProperties": {
                  "type": "number"
                }
              }
            },
            "required": ["id", "count"]
          },
          "loot_table": {
            "type": "string"
          },
          "icon": {
            "type": "object",
            "properties": {
              "item": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "count": {
                    "type": "number"
                  },
                  "nbt": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "number"
                    }
                  }
                },
                "required": ["id", "count"]
              },
              "type": {
                "type": "string"
              }
            },
            "required": ["item", "type"]
          }
        },
        "required": ["title", "icon", "type"]
      }
    },
    "display": {
      "type": "object",
      "properties": {
        "subtitle": {
          "type": "object",
          "properties": {
            "translate": {
              "type": "string"
            }
          },
          "required": ["translate"]
        },
        "description": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "groups": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "position": {
                "type": "array",
                "items": {
                  "type": "number"
                }
              }
            },
            "required": ["position"]
          }
        },
        "icon": {
          "type": "object",
          "properties": {
            "item": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "count": {
                  "type": "number"
                },
                "nbt": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "number"
                  }
                }
              },
              "required": ["id", "count"]
            },
            "type": {
              "type": "string"
            }
          },
          "required": ["item", "type"]
        },
        "icon_background": {
          "type": "string"
        },
        "title": {
          "type": "object",
          "properties": {
            "translate": {
              "type": "string"
            }
          },
          "required": ["translate"]
        }
      },
      "required": [
        "subtitle",
        "description",
        "groups",
        "icon",
        "icon_background",
        "title"
      ]
    },
    "settings": {
      "type": "object",
      "properties": {
        "unlockNotification": {
          "type": "boolean"
        },
        "showDependencyArrow": {
          "type": "boolean"
        },
        "repeatable": {
          "type": "boolean"
        },
        "individual_progress": {
          "type": "boolean"
        },
        "hidden": {
          "type": "string",
          "enum": ["LOCKED", "IN_PROGRESS", "COMPLETED", "DEPENDENCIES_VISIBLE"]
        }
      },
      "required": [
        "unlockNotification",
        "showDependencyArrow",
        "repeatable",
        "individual_progress",
        "hidden"
      ]
    }
  },
  "required": ["dependencies", "tasks", "rewards", "display", "settings"]
}
